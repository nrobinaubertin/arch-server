#!/bin/sh

cpu=$(w | sed -n '1p' | sed 's/^.*average:\ \(.*\),.*,.*/\1/')
latency=$(ping -c 3 -l 3 8.8.8.8 2>/dev/null | tail -n1 | awk '{print $4}' | tr '/' ' ' | cut -d'.' -f1)

#batteryStatus=$(acpi -b | awk 'sub(/,/,"") {print $3, $4}' | sed -e "s/,//")
#if [[ -z $batteryStatus ]]
#then
#	batteryStatus="unplugged"
#fi

currentTime=$(date +"%H:%M:%S")
if [[ $1 == left ]]
then
	echo "$cpu | $latency ms"
fi
if [[ $1 == right ]]
then
	echo "$currentTime"
fi
