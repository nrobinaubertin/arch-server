#!/bin/sh
cpu=$(w | sed -n '1p' | sed 's/^.*average:\ \(.*\),.*,.*/\1/')
batteryStatus=$(acpi -b | awk 'sub(/,/,"") {print $3, $4}')
batteryStatus=$( echo $batteryStatus | sed -e "s/,//")

if [[ -z $batteryStatus ]]
then
	batteryStatus="unplugged"
fi
currentTime=$(date +"%H:%M:%S")
if [[ $1 == left ]]
then
	echo "$cpu | $batteryStatus"
fi
if [[ $1 == right ]]
then
	echo "$currentTime"
fi
