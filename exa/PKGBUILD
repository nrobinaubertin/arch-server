# Original Maintainer: tuftedocelot@fastmail.fm
# Maintainer Niels Robin-Aubertin

pkgname="exa"
pkgver="0.6.0"
pkgrel=2
pkgdesc='Replacement for ls written in Rust.'
arch=('i686' 'x86_64')
url="https://github.com/ogham/exa"
license=('MIT')
depends=('libssh2')
makedepends=('cmake' 'rust' 'cargo' 'git')
source=(
    "https://github.com/ogham/exa/archive/v${pkgver}.tar.gz"
)
md5sums=(
    'a19e305d2dce7416503216e86b1276ce'
)

package() {
    cd "$srcdir/${pkgname}-${pkgver}"
    make
    install -Dm755 "$srcdir/${pkgname}-${pkgver}/target/release/$pkgname" "$pkgdir/usr/bin/$pkgname"
    install -Dm644 "$srcdir/${pkgname}-${pkgver}/contrib/man/$pkgname.1" "$pkgdir/usr/share/man/man1/$pkgname.1"
}
